class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        string result;
        int n = max(word1.length(), word2.length());
        for(int i = 0; i < n; i++)
        {
            if(i < word1.length())
            {
                result.push_back(word1[i]);
            }
            if(i < word2.length())
            {
                result.push_back(word2[i]);
            }
        }
        return result;
    }
};
